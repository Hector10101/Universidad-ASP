@model UniversidadM
@{
    ViewData["Title"] = "Agregar Universidad";
}

<h1>Agregar Universidad</h1>
<hr />
<br />

<div class="row">
    <div class="col-5">
        <form method="post"  asp-action= "AgregarUniversidad">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h5>ID</h5>
                <input class="form-control" asp-for="ID_Universidad" />
                <span class="text-danger">@ViewData["IDInValido"]</span>
                <span asp-validation-for="ID_Universidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Nombre</h5>
                <input class="form-control" asp-for="Nombre_Universidad" />
                <span asp-validation-for="Nombre_Universidad" class="text-danger"></span>
            </div>

             <button type="submit" class="btn btn-primary">Agregar</button>
        </form>
    </div>
</div>