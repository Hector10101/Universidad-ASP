@model DatosUniversidades
@{
    ViewData["Title"] = "EliminarUniversidad";
    int X = 0;
}

<h1>Eliminar Universidad</h1>


@foreach (var universidad in Model.Universidades)
{
    if (universidad.ID_Universidad == ViewBag.IDUniversidad)
    {
        X = 1;
        break;
    }
}
@if (X == 1)
{
    <a class="alert-link" asp-action="AgregarUniversidad">¿Quieres agregar una Universidad?</a>
    <br />
    <br />
    <div class="col-6 formulario">
        <form method="post" role="form">
            <div class="form-group">
                <h5>ID</h5>
                <input id="ID" value="@ViewData["ID"]" class="form-control" readonly />
            </div>
            <div class="form-group">
                <h5>Nombre</h5>

                <input value="@ViewData["Nombre"]" class="form-control" readonly />
            </div>
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a class="btn btn-primary" asp-controller="Universidades" asp-action="ModificarUniversidad">Ir a Modificacion</a>
        </form>
    </div>

}
else
{
    <hr />
    <br />
    <br />
    <br />

    <div class="text-center">
        <h3><span class="text-danger">Debes seleccionar una Universidad.</span></h3>
        <a class="alert-link" asp-controller="Universidades" asp-action="ModificarUniversidad">Volver</a>
    </div>
}

