@model DocentesM
@{
    ViewData["Title"] = "AgregarDocentes";
    DatosUniversidades datosUniversidades = new DatosUniversidades();
    ViewBag.IDUniversidad = datosUniversidades.Universidades;
}

<h1>Agregar Docentes</h1>
<hr />
<br />

<div class="row">
    <div class="col-5">
        <form method="post"  asp-action="AgregarDocente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h5>ID</h5>
                <input class="form-control" asp-for="ID_Docente" />
                <span class="text-danger">@ViewData["IDInValido"]</span>
                <span asp-validation-for="ID_Docente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Nombre</h5>
                <input class="form-control" asp-for="Nombre_Docente" />
                <span asp-validation-for="Nombre_Docente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Teléfono</h5>
                <input asp-for="Telefono" class="form-control input-phone" maxlength="12" id="phone" placeholder="000-000-0000" pattern="[0-9]{3}[ -][0-9]{3}[ -][0-9]{4}" title="Formato: 000-000-0000"/>
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>ID Universidad</h5>
                <select asp-for="ID_Universidad" class="form-control" id="exampleFormControlSelect1">
                    @foreach (var universidad in (List<UniversidadM>)ViewBag.IDUniversidad)
                    {
                        <option>@universidad.ID_Universidad </option>
                    }
                </select>
                <span asp-validation-for="ID_Universidad" class="text-danger"></span>
            </div>
            @if (ViewBag.IDUniversidad.Count != 0)
            {
                <button type="submit" class="btn btn-primary">Agregar</button>
            }

        </form>

    </div>
    @if (ViewBag.IDUniversidad.Count == 0)
    {
        <div class="col-7 text-center">
            <br />
            <br />
            <br />
            <h3><span class="text-danger">Debes tener alguna Universidad</span></h3>
            <a class="alert-link" asp-controller="Universidades" asp-action="AgregarUniversidad"> Ir a agregar una Universidad</a>
        </div>
    }
</div>
