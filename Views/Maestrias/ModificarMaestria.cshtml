@model MaestriaM
@{
    ViewData["Title"] = "ModificarMaestria";
    DatosMaestrias datosMaestrias = new DatosMaestrias();
}

<h1>Modificar Maestria</h1>

@if (datosMaestrias.Maestrias.Count > 0)
{
    <a class="alert-link" asp-action="AgregarMaestria">¿Quieres agregar una Maestria?</a>
}

<br />
<br />
<div class="row">
    <div class="col-6 formulario">
        <form method="post" role="form">
            <div class="form-group">
                <h5>ID</h5>
                <input asp-for="ID_Maestria" value="@ViewData["ID"]" class="form-control" readonly Required />
            </div>
            <div class="form-group">
                <h5>Nombre</h5>
                <input value="@ViewData["Nombre"]" class="form-control" readonly Required />
            </div>
            <div class="form-group">
                <h5>Duración</h5>
                <input value="@ViewData["Duracion"]" class="form-control" readonly Required />
            </div>
            <div class="form-group">
                <h5>ID Docente</h5>
                <input value="@ViewData["ID_Docente"]" class="form-control" readonly Required />
            </div>
           

            @if (datosMaestrias.Maestrias.Count > 0)
            {
                <button name="Editar" value="0" class="btn btn-primary">Ir a Editar</button>
                <button name="Eliminar" value="1" class="btn btn-danger">Ir a Eliminar</button>
            }


        </form>
    </div>

    <div class="col-6 ">
        <h5 class="text-primary">Selecciona la Maestria</h5>
        <form class="row" method="post">
            <select name="posicion" id="opciones" class="col-9 form-control">
                <option value="" selected>Selecciona</option>
                @foreach (var maestria in datosMaestrias.Maestrias)
                {
                    <option value="@maestria.ID_Maestria">ID: @maestria.ID_Maestria ; Nombre: @maestria.Nombre_Maestria;  </option>
                }
            </select>
            <div class="col-3">
                <button name="ver" class="btn btn-primary" type="submit">Seleccionar</button>
            </div>
        </form>
        <br />
        <br />

        @if (datosMaestrias.Maestrias.Count > 0)
        {
            <table class="table table-striped ">
                <thead class="badge-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>ID Docente</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var maestria in datosMaestrias.Maestrias)
                    {
                        <tr>
                            <td>@maestria.ID_Maestria</td>
                            <td>@maestria.Nombre_Maestria</td>
                            <td>@maestria.ID_Docente</td>

                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-md-right">
                <a class="btn btn-primary" asp-controller="Maestrias" asp-action="VerMaestrias">Más detalles</a>
            </div>
        }
        else
        {
            <div class="text-center">
                <h4><span class="text-danger">No Existen Maestrias.</span></h4>
                <a class="alert-link" asp-controller="Maestrias" asp-action="AgregarMaestria">¿Quieres agregar una Maestria?</a>
            </div>
        }
    </div>
</div>

<style>
    .formulario {
        padding-right: 80px;
    }
</style>

