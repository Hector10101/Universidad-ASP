
@{
    ViewData["Title"] = "Alumnos";
}

<h1>Alumnos</h1>

<div class="container text-center">
    <br />
    <br />
    <br />
    <br />
    <div class="text-center  form-group row">
        <div class="col-4">
            <div class="Contenedores">
                <h4>Agregar un nuevo Alumno</h4>
                <br />
                <p class="font-italic">Descripcion...</p>
                <br />
                <a class="btn btn-primary" asp-action="AgregarAlumno">Agregar</a>
            </div>
        </div>
        <div class="col-4">
            <div class="Contenedores">
                <h4>Editar/Eliminar un Alumno</h4>
                <br />
                <p class="font-italic">Descripcion...</p>
                <br />
                <a class="btn btn-primary" asp-action="ModificarAlumno">Editar/Eliminar</a>
            </div>
        </div>
        <div class="col-4">
            <div class="Contenedores">
                <h4>Ver Alumnos</h4>
                <br />

                <p class="font-italic">Descripcion...</p>
                <br />
                <a class="btn btn-primary" asp-action="VerAlumnos">Ver</a>
            </div>
        </div>
    </div>
</div>


